<% include partials/head %>
<form action = "/newposts" method = "Post">
<div class="form-group">
    <label class="form-control-label" for="formgroupPermalink">Permalink</label>
    <input type ="text" class="form-control" id="blogId"placeholder="Permalink Input">
</div>
<div class ="form-group">
    <label class ="form-control-label" for="title">Title</label>
    <input type ="text" class = "form-control" id = "title" name="title" placeholder = "Blog Title">
</div>
<div class = "form-group">
        <label class ="form-control-label" for="formgroupfirstName">First Name</label>
        <input type = "firstName" class = "form-control" id = "firstName" name="firstName" placeholder ="First Name">
</div>
<div class = "form-group">
        <label class ="form-control-label" for="formgrouplastName">Last Name</label>
        <input type = "lastName" class = "form-control" id = "lastName" name="lastName" placeholder ="Last Name">
</div>
<div class = "form-group">
        <label class ="form-control-label" for="formgroupEmail">Email Address</label>
        <input type = "email" class = "form-control" id = "email" name="email" placeholder ="Email Address">
</div>
<div class = "form-group">
        <label class ="form-control-label" for="formgrouppubDate">Pub Date</label>
    <input type = "pub-date" class = "form-control" id = "pubDate" name="pubDate " placeholder ="Pub Date">
</div>

<div class = "form-group">
        <label class ="form-control-label" for="formgroupContent">Content</label>
    <input type = "content" class = "form-control" id = "content" name="content"col="12" rows-"10" placeholder ="Blog Content">
</div>
<button type="submit" class="btn btn-dark">Publish</button>
</form>
<% include partials/footer %>